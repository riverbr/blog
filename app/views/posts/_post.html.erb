<div class="card bg-light mb-3">
  <div class="card-body">
    <h4><%= link_to post.title, post %>  </h4>

    <div class="text-muted mb-2">
      <em>Por <%= post.author %> (<%= l post.created_at, format: :long %>) </em>
    </div>

    <p><%= post.body.truncate(200) %></p>
    <p class="text-muted"><%= pluralize post.comments.count, 'Comentário' %></p>

    <%= link_to "Ler artigo", post, class: 'btn btn-primary' %>
    <%= link_to "Editar", edit_post_path(post), class: 'btn btn-secondary' %>
    <%= link_to "Apagar", post, class: 'btn btn-danger',
    data: {turbo_method: :delete, turbo_confirm: 'Você tem certeza?'} %>
  </div>
</div>