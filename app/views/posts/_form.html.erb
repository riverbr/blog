<%= form_with(model: post) do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: 5 %>
  </div>

  <%= form.button class: "btn btn-primary" do %> 
    <span class="show-when-enabled">Criar Post</span>
    <span class="show-when-disabled">Criando...</span>
  <% end %>
<% end %>
